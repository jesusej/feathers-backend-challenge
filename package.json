{
  "name": "feathers-backend-challenge",
  "description": "Currency Conversion API challenge made with FeathersJS",
  "version": "0.0.0",
  "homepage": "",
  "private": true,
  "keywords": [
    "feathers"
  ],
  "author": {},
  "contributors": [],
  "bugs": {},
  "engines": {
    "node": ">= 22.18.0"
  },
  "feathers": {
    "language": "ts",
    "packager": "pnpm",
    "database": "other",
    "framework": "koa",
    "transports": [
      "rest",
      "websockets"
    ],
    "schema": false
  },
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "main": "lib/index",
  "scripts": {
    "dev": "nodemon -x ts-node src/index.ts",
    "compile": "shx rm -rf lib/ && tsc",
    "start": "node lib/",
    "prettier": "npx prettier \"**/*.ts\" --write",
    "mocha": "cross-env NODE_ENV=test mocha test/ --require ts-node/register --recursive --extension .ts --exit",
    "test": "npm run mocha",
    "bundle:client": "npm run compile && npm pack --pack-destination ./public"
  },
  "dependencies": {
    "@feathersjs/authentication": "^5.0.34",
    "@feathersjs/authentication-client": "^5.0.34",
    "@feathersjs/configuration": "^5.0.34",
    "@feathersjs/errors": "^5.0.34",
    "@feathersjs/feathers": "^5.0.34",
    "@feathersjs/koa": "^5.0.34",
    "@feathersjs/schema": "^5.0.34",
    "@feathersjs/socketio": "^5.0.34",
    "@feathersjs/transport-commons": "^5.0.34",
    "joi": "^18.0.1",
    "mongoose": "^8.18.0",
    "open-exchange-rates": "^0.3.0",
    "rabbit-queue": "^5.6.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@feathersjs/adapter-commons": "^5.0.34",
    "@feathersjs/cli": "5.0.34",
    "@feathersjs/rest-client": "^5.0.34",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.3",
    "axios": "^1.9.0",
    "cross-env": "^10.0.0",
    "mocha": "^11.2.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}